<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Engine</th>
      <th>Transmission</th>
      <th>Drive</th>
      <th>Fuel</th>
      <th>Mileage</th>
      <th>Color</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.engine %></td>
        <td><%= vehicle.transmission %></td>
        <td><%= vehicle.drive %></td>
        <td><%= vehicle.fuel %></td>
        <td><%= vehicle.odometer_readings.last || 0 %></td>
        <td><%= vehicle.color %></td>
        <td><%= link_to 'Show', [vehicle.user, vehicle] %></td>
        <td><%= link_to 'Edit', edit_user_vehicle_path(vehicle.user, vehicle) %></td>
        <td><%= link_to 'Destroy', [vehicle.user, vehicle], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

