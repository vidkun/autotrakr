<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@user.errors.count, 'error') %> prohibited
          this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class='form-group'>
    <%= f.label :email, 'Email:' %><br>
    <%= f.text_field :email, placeholder: 'Email', class: 'form-control input' %>
  </div>
  <div class='form-group'>
    <%= f.label :password, 'Password:' %><br>
    <%= f.password_field :password, placeholder: 'Password', class: 'form-control input' %>

    <%= f.label :password_confirmation, 'Confirm Password:' %><br>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control input' %>
  </div>
  
  <%= f.submit 'Register', class: 'btn btn-primary' %> 
  
  <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
<% end %>